/* **************** QTableView *********************************** */

QTableView {
    background-color: #00527A;
    alternate-background-color: #00344C;
    border: 1px solid #1975A3;
	border-radius: 0px;
    gridline-color: #1975A3;
    margin-top: 1px;
}

QTableView::item:hover {
    color: #FFFFFF;
    background-color: #006699;
}

QTableView::item:pressed {
    color: #FFFFFF;
    background-color: #006699;
}

QTableView::item:selected:active {
    color: #FFFFFF;
    background-color: #005881;
}

QTableView QTableCornerButton::section {
    background-color: #00344C;
    border-top: 0px;
    border-right: 1px;
    border-bottom: 1px;
    border-left: 0px;
    border-style: solid;
	border-color: #1975A3;
    border-radius: 0px;
}



/* **************** QHeaderView ********************************** */

QHeaderView {
    background-color: #00344C;
    border: 1px solid transparent;
	border-radius: 0px;
    padding: 0px;
    margin: 0px;
}

QHeaderView::section {
    color: #C0C0C0;
    background-color: #00344C;
    border: 1px solid #1975A3;
    border-radius: 0px;
    padding: 4px;
    text-align: center;
}

QHeaderView::section::vertical::first, QHeaderView::section::vertical::only-one {
    border-top: 1px solid #1975A3;
}

QHeaderView::section::vertical {
    border-top: transparent;
}

QHeaderView::section::horizontal::first, QHeaderView::section::horizontal::only-one {
    border-left: 1px solid #1975A3;
}

QHeaderView::section::horizontal {
    border-left: transparent;
}

QHeaderView::section:checked {
    color: #FFFFFF;
    background-color: #00344C;
 }

QHeaderView::down-arrow {
    image: url(down_arrow.png);
}

QHeaderView::up-arrow {
    image: url(up_arrow.png);
}



/* **************** QSlider ************************************** */

QSlider::groove:horizontal {
    background: #00344C;
    border-radius: 8px;
    height: 16px;
    margin: 2px 0px;
}

QSlider::handle:horizontal {
    background: QLinearGradient( 
        x1: 0, y1: 0, 
        x2: 0, y2: 1, 
        stop: 0 #1975A3, 
        stop: 1 #1975A3 );
    border-radius: 10px;
    width: 20px;
    margin: -3px 0px;
}

QSlider::groove:vertical {
    background: #00344C;
    border-radius: 8px;
    width: 16px;
    margin: 0px 2px;
}

QSlider::handle:vertical {
    background: QLinearGradient( 
        x1: 0, y1: 0, 
        x2: 0, y2: 1, 
        stop: 0 #1975A3, 
        stop: 1 #1975A3 );
    border-radius: 10px;
    height: 20px;
    margin: 0px -3px;
}



/*	=================================================================
	===== Direct styles to name ID ==================================
	================================================================= */

/* Overview Page */
#line {
	background-color: #C0C0C0;
    border: 1px solid #C0C0C0;    
}

/* Overview Page */
QListView#listTransactions {
    background-color: transparent;
    border: 0px solid transparent;
	border-radius: 0px;
	padding: 0px;
    max-width: 400px;
}

/* Sign Verify Message Page */
QPushButton#addressBookButton_SM,
QPushButton#pasteButton_SM,
QPushButton#copySignatureButton_SM,
QPushButton#addressBookButton_VM {
    color: #C0C0C0;
	background-color: #00527A;
    border: 1px solid #1975A3;
    border-radius: 3px;
	padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 5px;
    padding-right: 5px;
    margin: 10px 3px;
}

/* Sign Verify Message Page */
QPushButton#addressBookButton_SM:hover,
QPushButton#pasteButton_SM:hover,
QPushButton#copySignatureButton_SM:hover,
QPushButton#addressBookButton_VM:hover {
    color: #FFFFFF;
    background-color: #006699;
	border: 1px solid #BEBEBE;
}

/* Sign Verify Message Page */
QPushButton#addressBookButton_SM:pressed,
QPushButton#pasteButton_SM:pressed,
QPushButton#copySignatureButton_SM:pressed,
QPushButton#addressBookButton_VM:pressed {
    color: #FFFFFF;
	background-color: #00527A;
    border: 1px solid #BEBEBE;
}



