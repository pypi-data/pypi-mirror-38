<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.seandev.org/styles.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.css" rel="stylesheet">
<link href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.js"></script>
<script>
$(document).on('click', '[data-toggle="lightbox"]', function(event) {
  event.preventDefault();
  $(this).ekkoLightbox({alwaysShowClose: true});
});
</script>
<title>{{ title }}</title>
</head>
<body>
<div class="padded">
  <h4><a href="../index.html">Back (..)</a></h4>
  <div>&nbsp;</div>
  <div style="display: flex; flex-wrap: wrap; justify-content: center; margin: -15px;">
{% for dirr in dirs %}
    <div class="card" style="margin: 15px; background: #F5F5F5;">
      <div class="card-body" style="max-width: 700px; width: 100%; display: flex; align-items: center; justify-content: center;">
        <a href="{{ dirr['path'] }}"><h2>{{ dirr['name'] }}</h2></a>
      </div>
    </div>
{% endfor %}
{% for file in files %}
    <div class="card" style="margin: 15px;">
      <a href="{{ file['path'] }}" data-toggle="lightbox" data-gallery="gallery" data-title="{{ file['name'] }}" data-footer='<form method="get" action="{{ file['path'] }}"><button type="submit" class="btn btn-primary" style="float: right;">Download</button></form>'>
        <img src="{{ file['thumbnail_path'] }}" class="img-fluid">
      </a>
    </div>
{% endfor %}
  </div>
  <div>&nbsp;</div>
  <div style="text-align: center;">
    <nav>
      <ul class="pagination justify-content-center">
{% if prev == 0 %}
        <li class="page-item"><a class="page-link" href="./index.html"><i class="fas fa-arrow-alt-circle-left"></i></a></li>
{% endif %}
{% if prev > 0 %}
        <li class="page-item"><a class="page-link" href="./page{{ prev }}.html"><i class="fas fa-arrow-alt-circle-left"></i></a></li>
{% elif prev < 0 %}
        <li class="page-item disabled"><a class="page-link"><i class="fas fa-arrow-alt-circle-left"></i></a></li>
{% endif %}
{% if index == 0 %}
        <li class="page-item active"><a class="page-link" href="./index.html">1</a></li>
{% else %}
        <li class="page-item"><a class="page-link" href="./index.html">1</a></li>
{% endif %}
{% for i in range(pgcount) %}
  {% if i > 0 %}
    {% if i == index %}
        <li class="page-item active"><a class="page-link" href="./page{{ i }}.html">{{ i + 1 }}</a></li>
    {% else %}
      <li class="page-item"><a class="page-link" href="./page{{ i }}.html">{{ i + 1 }}</a></li>
    {% endif %}
  {% endif %}
{% endfor %}
{% if next > 0 %}
        <li class="page-item"><a class="page-link" href="./page{{ next }}.html"><i class="fas fa-arrow-alt-circle-right"></i></a></li>
{% elif next < 0 %}
        <li class="page-item disabled"><a class="page-link"><i class="fas fa-arrow-alt-circle-right"></i></a></li>
{% endif %}
      </ul>
    </nav>
  </div>
</div>
</body>
</html>
