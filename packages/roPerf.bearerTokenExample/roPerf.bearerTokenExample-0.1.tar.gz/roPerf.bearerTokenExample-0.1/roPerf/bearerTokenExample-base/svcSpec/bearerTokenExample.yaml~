tags:
- name: "bearerTokenIssuer"
  description: "Based on presented credentials and request, issues a bearerToken"
  externalDocs:
    description: "Find out more"
    url: 'http://swagger.io'
schemes:
- "https"
- "http"
paths:
  /token:
    post:
      tags:
      - "token"
      summary: "Obatin a token"
      description: "Given credentials get a bearer token"
      operationId: "obtain"
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "credentials"
        required: true
        schema:
          $ref: "#/definitions/Credentials"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: '#/definitions/BearerToken'
        400:
          description: "Invalid tag value"
        405:
          description: "Invalid input"
definitions:
  Credentials:
    type: "object"
    required:
    - "accessKey"
    - "secretKey"
    properties:
      accessKey:
        type: "string"
      secretKey:   
        type: "string"
  BearerToken:
    type: "object"
    properties:
      data:
        type: "object"
        properties:
         expiredAt:
          type: "string"
         id:
          type: "string"
         issuedAt:
          type: "string"
