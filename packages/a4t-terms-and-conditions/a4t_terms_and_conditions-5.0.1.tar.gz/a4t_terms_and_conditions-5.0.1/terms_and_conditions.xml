<tryton>
    <data>
        <record model="res.group" id="group_terms_and_conditions_admin">
            <field name="name">Terms &amp; Conditions Administration</field>
        </record>
        <record model="res.user-res.group"
                id="user_admin_group_commission_admin">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_terms_and_conditions_admin"/>
        </record>

        <record model="ir.ui.view" id="terms_and_conditions_view_form">
            <field name="model">terms_and_conditions</field>
            <field name="type">form</field>
            <field name="name">terms_and_conditions_form</field>
        </record>
        <record model="ir.ui.view" id="terms_and_conditions_view_tree">
            <field name="model">terms_and_conditions</field>
            <field name="type">tree</field>
            <field name="name">terms_and_conditions_tree</field>
        </record>
        <record model="ir.action.act_window" id="act_terms_and_conditions_form">
            <field name="name">Terms &amp; Conditions</field>
            <field name="res_model">terms_and_conditions</field>
        </record>
        <record model="ir.action.act_window.view"
                id="act_terms_and_conditions_list_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="terms_and_conditions_view_tree"/>
            <field name="act_window" ref="act_terms_and_conditions_form"/>
        </record>
        <record model="ir.action.act_window.view"
                id="act_terms_and_conditions_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="terms_and_conditions_view_form"/>
            <field name="act_window" ref="act_terms_and_conditions_form"/>
        </record>
        <menuitem name="Terms &amp; Conditions"
            parent="company.menu_company_tree"
            action="act_terms_and_conditions_form"
            id="menu_terms_and_conditions_form"
            icon="tryton-list" sequence="10"/>

        <record model="ir.model.access" id="access_terms_and_conditions">
            <field name="model"
                search="[('model', '=', 'terms_and_conditions')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_terms_and_conditions_admin">
            <field name="model"
                search="[('model', '=', 'terms_and_conditions')]"/>
            <field name="group" ref="group_terms_and_conditions_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

        <record model="ir.ui.view" id="terms_and_conditions_line_view_form">
            <field name="model">terms_and_conditions.line</field>
            <field name="type">form</field>
            <field name="name">terms_and_conditions_line_form</field>
        </record>
        <record model="ir.ui.view" id="terms_and_conditions_line_view_tree">
            <field name="model">terms_and_conditions.line</field>
            <field name="type">tree</field>
            <field name="name">terms_and_conditions_line_tree</field>
        </record>
        <record model="ir.ui.view"
                id="terms_and_conditions_line_view_tree_sequence">
            <field name="model">terms_and_conditions.line</field>
            <field name="type">tree</field>
            <field name="name">terms_and_conditions_line_tree_sequence</field>
        </record>

        <record model="ir.model.access" id="access_terms_and_conditions_line">
            <field name="model"
                search="[('model', '=', 'terms_and_conditions.line')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access"
                id="access_terms_and_conditions_line_admin">
            <field name="model"
                search="[('model', '=', 'terms_and_conditions.line')]"/>
            <field name="group" ref="group_terms_and_conditions_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

        <record model="ir.ui.view" id="terms_and_conditions_article_view_form">
            <field name="model">terms_and_conditions.article</field>
            <field name="type">form</field>
            <field name="name">terms_and_conditions_article_form</field>
        </record>

        <record model="ir.ui.view" id="terms_and_conditions_article_view_tree">
            <field name="model">terms_and_conditions.article</field>
            <field name="type">tree</field>
            <field name="name">terms_and_conditions_article_tree</field>
        </record>

        <record model="ir.model.access"
                id="access_terms_and_conditions_article">
            <field name="model"
                search="[('model', '=', 'terms_and_conditions.article')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access"
                id="access_terms_and_conditions_article_admin">
            <field name="model"
                search="[('model', '=', 'terms_and_conditions.article')]"/>
            <field name="group" ref="group_terms_and_conditions_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

        <record model="ir.action.act_window"
                id="act_terms_and_conditions_article_form">
            <field name="name">Article (T&amp;C)</field>
            <field name="res_model">terms_and_conditions.article</field>
        </record>
        <record model="ir.action.act_window.view"
                id="act_terms_and_conditions_article_list_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="terms_and_conditions_article_view_tree"/>
            <field name="act_window"
                ref="act_terms_and_conditions_article_form"/>
        </record>
        <record model="ir.action.act_window.view"
                id="act_terms_and_conditions_article_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="terms_and_conditions_article_view_form"/>
            <field name="act_window"
                ref="act_terms_and_conditions_article_form"/>
        </record>
        <menuitem name="Article (T&amp;C)"
            parent="menu_terms_and_conditions_form"
            action="act_terms_and_conditions_article_form"
            id="menu_terms_and_conditions_article_form"
            icon="tryton-list" sequence="10"/>
    </data>
</tryton>
